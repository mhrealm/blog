---
const skills = [
  { name: "React", color: "bg-sky-500" },
  { name: "Vue", color: "bg-emerald-500" },
  { name: "TypeScript", color: "bg-blue-600" },
  { name: "Tailwind", color: "bg-cyan-500" },
  { name: "Node.js", color: "bg-lime-600" },
  { name: "Shopify", color: "bg-green-600" },
  { name: "Cloudflare", color: "bg-orange-500" },
  { name: "Workers", color: "bg-amber-500" },
  { name: "Docker", color: "bg-blue-500" },
  { name: "AI / LLM", color: "bg-purple-500" },
];
---

<div class="py-16 sm:py-20 lg:py-24">
  <!-- Section Header -->
  <div class="text-center mb-10 sm:mb-12">
    <p
      class="text-xs sm:text-sm font-medium text-indigo-600 dark:text-indigo-400 uppercase tracking-widest mb-2"
    >
      What I Work With
    </p>
    <h2 class="text-2xl sm:text-3xl font-bold text-zinc-900 dark:text-white">Tech Stack</h2>
  </div>

  <!-- Skills Grid -->
  <div class="flex flex-wrap justify-center gap-2 sm:gap-3 max-w-3xl mx-auto">
    {
      skills.map((skill) => (
        <div class="group relative">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full blur opacity-0 group-hover:opacity-75 transition duration-500" />
          <div class="relative flex items-center gap-1.5 sm:gap-2 px-3 sm:px-4 py-1.5 sm:py-2 bg-white dark:bg-zinc-900 rounded-full border border-zinc-200 dark:border-zinc-800 group-hover:border-transparent transition-all duration-300">
            <span class={`w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full ${skill.color}`} />
            <span class="text-xs sm:text-sm font-medium text-zinc-700 dark:text-zinc-300 group-hover:text-zinc-900 dark:group-hover:text-white transition-colors">
              {skill.name}
            </span>
          </div>
        </div>
      ))
    }
  </div>
</div>
