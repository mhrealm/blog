---
const {
  repo = "ErpanOmer/erpanomer.github.io",
  repoId = "R_kgDOIzb_Gg",
  category = "General",
  categoryId = "DIC_kwDOIzb_Gs4C1Liq",
} = Astro.props;
---

<section class="giscus mt-12">
  <script
    src="https://giscus.app/client.js"
    data-repo={repo}
    data-repo-id={repoId}
    data-category={category}
    data-category-id={categoryId}
    data-mapping="pathname"
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="top"
    data-theme="dark"
    data-lang="zh-CN"
    data-loading="lazy"
    crossorigin="anonymous"
    async
  ></script>
</section>
